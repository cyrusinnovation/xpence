  <% end %>

  <div class="field">
    <%= f.label :date %><br />
    <%= f.text_field :date %>
  </div>
  <div class="field">
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <%= f.label :vendor %><br />
    <%= f.text_field :vendor %>
  </div>
  <div class="field">
    <%= f.label :receipt_sent %><br />
    <%= f.check_box :receipt_sent %>
  </div>
    <div class="field">
    <%= f.label :description %><br />
    <% descs = Expense::DESCRIPTIONS.collect {|desc| [desc, desc]} %>
